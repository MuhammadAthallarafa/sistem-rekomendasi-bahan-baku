<div class="container">
  <h3>Daftar Bahan Baku</h3>

  <table>
    <thead>
      <tr>
        <th>Nama</th>
        <th>Harga</th>
        <th>Kualitas</th>
        <th>Stok</th>
        <th>Skor</th>
        <th style="width: 160px;">Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% materials.forEach(material => { %>
        <tr>
          <td><%= material.name %></td>
          <td><%= material.price %></td>
          <td><%= material.quality %></td>
          <td><%= material.stock %></td>
          <td><%= material.score.toFixed(2) %></td>
          <td>
            <form action="/materials/edit/<%= material.id %>" method="GET" style="display:inline;">
              <button class="btn-secondary">Edit</button>
            </form>

            <form action="/materials/delete/<%= material.id %>" method="POST" style="display:inline;">
              <button class="btn-danger">Delete</button>
            </form>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>

  <br>

  <a href="/" class="btn-secondary">Kembali ke Home</a>
  <a href="/form" class="btn-primary">Tambah Bahan Baku</a>
</div>
